<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Sports Scheduler</title>
</head>

<script>
    function deleteSport(id){
    fetch(`/sportsession/${id}`,{
      method : 'DELETE',
      headers : {"content-type" : 'application/json'},
    })
    .then((res) =>{
      if(res.ok){
        window.location.assign('/admin');
      }
       
    })
    .catch((error)=> console.log(error)); 
}
</script>

<body>
    <%- include('header',{page: "name"})%>
    <div class="container m-auto mt-10 p-auto">
        <div>
            <p class="text-6xl mb-5"><%= name %></p>
            <% if(user == 'admin') { %>
                <a href="#" class="text-right my-10 text-lime-950">Edit</a>    
                <a href="#" onclick="deleteSport(<%= sportID %>)" class="text-right mx-10 text-lime-950">Delete</a>    
            <% } %>
        </div>
        
        <br>
        <p class="text-2xl">Sessions</p>
        <div class="w-56 mt-10 rounded-lg text-white px-10 py-4 bg-lime-950 h-16 cursor-pointer hover:bg-white hover:text-lime-950 border-2 border-lime-950">
           <a href="#"> Jan 1,2023 5:30 PM </a>
        </div>
    </div>
    <div class="container m-auto mt-10 p-auto text-xl gap-10" >
        <a href="/createsession" >Create a new session</a>
        <a href="#" class="px-10">View previous sessions</a>
    </div>
    <%- include('footer')%>
</body>
</html>